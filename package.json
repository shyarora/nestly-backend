{
  "name": "nestly-backend",
  "version": "1.0.0",
  "description": "A scalable Airbnb-like backend built with Bun, GraphQL, and MongoDB",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun dist/index.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:seed": "bun scripts/seed-database.ts",
    "db:migrate": "bun scripts/migrate-database.ts",
    "docker:dev": "docker-compose up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build"
  },
  "keywords": [
    "airbnb",
    "rental",
    "graphql",
    "mongodb",
    "bun",
    "typescript"
  ],
  "author": "Shyam Arora",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@as-integrations/express5": "^1.0.0",
    "express": "^4.19.2",
    "graphql": "^16.8.1",
    "mongoose": "^8.5.2",
    "redis": "^4.6.14",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.4.0",
    "dotenv": "^16.4.5",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.4",
    "winston": "^3.13.1",
    "nodemailer": "^6.9.14",
    "razorpay": "^2.9.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/bun": "^1.1.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.2.0",
    "@types/nodemailer": "^6.4.15",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
